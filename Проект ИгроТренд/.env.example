# Database
# For development (SQLite):
DATABASE_URL="file:./db/custom.db"

# For production (choose one):
# PostgreSQL: "postgresql://user:password@localhost:5432/igrotrend?schema=public"
# MySQL: "mysql://user:password@localhost:3306/igrotrend"
# PlanetScale: "mysql://user:password@aws.connect.psdb.cloud/igrotrend?sslaccept=strict"

# JWT Secret (MUST be at least 64 characters in production!)
# Generate with: openssl rand -base64 64
JWT_SECRET="change-this-to-a-secure-random-string-at-least-64-characters-long-in-production"

# App URL (for production)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email (optional - for real email sending)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Refresh tokens
# REFRESH_TOKEN_EXPIRES_DAYS=30   # number of days refresh tokens remain valid

# Cross-Origin Resource Sharing
# Comma separated list of allowed origins (or * for any)
# ALLOWED_ORIGINS="http://localhost:3000,http://example.com"

# Optional: Analytics
# NEXT_PUBLIC_ANALYTICS_ID=""
